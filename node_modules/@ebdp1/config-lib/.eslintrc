{
  "env": {
    "es2021": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true
      }
    ],
    "no-console": "warn",
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "new-cap": "error",
    "no-underscore-dangle": "error",
    "arrow-body-style": "error",
    "no-param-reassign": "error",
    "no-implicit-globals": "error",
    "no-global-assign": "error",
    "no-undef": "error",
    "class-methods-use-this": "warn",
    "func-names": "warn",
    "eol-last": "warn",
    "max-len": [
      "warn",
      120
    ]
  },
  "globals": {
    "global": "off"
  }
}
